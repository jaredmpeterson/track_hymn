<div metal:use-macro="load: ../layout.pt">
    <div metal:fill-slot="content">
        <div class="content">
            <h1>Add Hymns</h1>
            <div>The value from the controller is ${value}.</div>

            <form class="hymn-form" action="" method="POST">
                <label for="opening">Opening:</label>
                <input id="opening" type="number" name="opening" min="1" max="341"><br>
                <label for="sacrament">Sacrament:</label>
                <input id="sacrament" type="number" name="sacrament" min="1" max="341"><br>
                <label for="rest">Rest:</label>
                <input id="rest" type="number" name="rest" min="1" max="341"><br>
                <label for="closing">Closing:</label>
                <input id="closing" type="number" name="closing" min="1" max="341"><br>
                <button type="submit">Submit</button>
            </form>
        </div>
    </div>
</div>
